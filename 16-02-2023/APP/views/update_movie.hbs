<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Form di inserimento di dati nel database</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/" method="POST" autocomplete="off">
                    <input type="hidden" name="_id" value="{{movie._id}}">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Titolo</label>
                            <input type="text" class="form-control" name="title" placeholder="titolo film"
                                value="{{movie.title}}"></div>
                                <div class="form-group col-md-6">
                                    <label>Anno</label>
                                    <input type="text" class="form-control" name="year" placeholder="Anno di uscita" value="{{movie.year}}">
                                </div>
                            
                        <div class="form-group col-md-6">
                            <label>Guardato</label>
                            <input type="boolean" class="form-control" name="seen" placeholder="Hai visto questo film/serie?"
                                value="{{movie.seen}}">
                            
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Serie tv/ film</label>
                        <input type="text" class="form-control" name="tvSerie" placeholder="Si tratta di un film o di una serie?"
                                value="{{movie.tvSerie}}">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Stagioni</label>
                            <input type="text" class="form-control" name="seasons" placeholder="Quante stagioni ha?"
                                value="{{movie.seasons}}">
                        </div>
                        <div class="form-group col-md-6">
                            <label>Informazioni</label>
                            <input type="text" class="form-control" name="info" placeholder="Informazioni generali"
                                value="{{movie.info}}">
                        </div>
                        
                    </div>
                    <div class="form-group float-right my-5">
                        <button type="submit" class="btn btn-primary btn-sm"> Invia </button>
                        <a class="btn btn-info btn-sm" href="/movie_list"> Vedi tutti</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
